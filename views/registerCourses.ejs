<%- include('partials/header2') %>



<div class="container rounded bg-white mt-5 mb-5" id="box">
  <div class="row">
      <div class="col-md-3 border-right"></div>
      <div class="col-md-7 border-right">
          <div class="p-3 py-5">
              <div class="d-flex justify-content-between align-items-center mb-3">
                  <h4 class="text-right">Register Courses</h4>
              </div>
              <form action="/registerCourses" method="POST">
                <div class="row mt-2">
                    <label class="labels">Matric Number</label>
                    <input type="text" class="form-control" placeholder="Matric Number" name="matricNumber" value="">
                    <label class="labels">Semester</label>
                    <input type="text" class="form-control" placeholder="Semester" name="Semester" value="">
                </div>

                <div class="row mt-2" id="courseform">
                    <div class="col-md-2">
                        <label class="labels">Course Code</label>
                        <input type="text" class="form-control" placeholder="Course Code" name="courseCode" value="">
                    </div>
                    <div class="col-md-7">
                        <label class="labels">Course Title</label>
                        <input type="text" class="form-control" placeholder="Course Title" name="courseTitle" value="">
                    </div>
                    <div class="col-md-3">
                        <label class="labels">Unit</label>
                        <input type="text" class="form-control" value="" placeholder="Unit" name="courseUnit">
                    </div>
                </div>

                <div class="row mt-2" id="courseform2">
                    
                </div>

                <div class="row mt-2">
                    <div class="col-md-3 mx-auto">
                        <button class="btn btn-primary" id="addCourse-button" type="button">  Add Course  </button>
                         </div>
                </div>
                
                  <div class="row mt-2">
                      <div class="col-md-3 mx-auto">
                          <button class="btn btn-primary profile-button" type="submit">  Submit  </button>
                      </div>
                  </div>
              </form>
              <div class='pop-up'></div>
          </div>
      </div>
  </div>
</div>





<%- include('partials/footer') %>
